<p id="notice"><%= notice %></p>

<h1>Listing Sales</h1>

 <table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Total</th>
      <th>Paid</th>
      <th>Change</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.name %></td>
        <td><%= sale.total %></td>
        <td><%= sale.paid %></td>
        <td><%= sale.change %></td>

 <td><%= link_to 'Show', sale %></td>  
 <% if can? :update, Sale %>  
  <td><%= link_to 'Edit', edit_sale_path(sale) %></td>  
 <%end%>  
 <% if can? :destroy, Sale %>  
  <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>  
 <% end %>      


      </tr>
    <% end %>
  </tbody>
</table>

